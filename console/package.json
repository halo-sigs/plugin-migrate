    "@halo-dev/ui-shared": "2.22.0",
    "@tanstack/vue-query": "^4.41.0",
    "@vueuse/core": "^10.11.1",
    "@zip.js/zip.js": "^2.8.10",
    "axios": "^1.13.2",
    "es-toolkit": "^1.42.0",
    "fast-xml-parser": "^4.5.3",
    "fastq": "1.17.1",
    "markdown-it": "^14.1.0",
    "performant-array-to-tree": "^1.11.0",
    "spark-md5": "^3.0.2",
    "toml": "^3.0.0",
    "transliteration": "^2.3.5",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@halo-dev/ui-plugin-bundler-kit": "2.22.0",
    "@iconify/json": "^2.2.408",
    "@rsbuild/core": "^1.6.6",
    "@rushstack/eslint-patch": "^1.15.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.19.25",
    "@types/spark-md5": "^3.0.5",
    "@unocss/eslint-config": "^66.5.6",
    "@unocss/webpack": "^66.5.6",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^8.7.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "~5.9.3",
    "unocss": "^66.5.6",
    "unplugin-icons": "^22.5.0",
    "vue-tsc": "^3.1.4"
  },
  "packageManager": "pnpm@10.22.0"
